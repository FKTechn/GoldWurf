<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView_popup_start_explanation"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<TableLayout
    android:id="@+id/popup_start_explanation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="6.5dp"
    android:scrollbars="vertical" >

    <TableRow
        android:id="@+id/tableRow_title"
        android:layout_width="fill_parent"
        android:layout_height="0dip">

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/textView_explanation_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:height="35dp"
            android:text="@string/explanation_title"
            android:textColor="@color/Gold"
            android:textColorHint="@color/Gold"
            android:textSize="25sp"
            android:textStyle="bold"
            pixlui:typeface="Monotype_corsiva.ttf"/>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow_physiology_intellect"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical" >

        <ImageView
            android:id="@+id/imageView_physiology"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/physiology"/>
        
        <ImageView
            android:id="@+id/imageView_intellect"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/intellect" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow_socium_material"
        android:layout_marginTop="3dp" 
		android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView_socium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/socium" />
        
        <ImageView
            android:id="@+id/imageView_material"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/material" />

    </TableRow>

</TableLayout>

</ScrollView>