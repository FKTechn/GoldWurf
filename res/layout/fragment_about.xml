<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/RootAboutLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:background="@drawable/background_vert"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <TextView
        android:id="@+id/textViewAbout"
        android:layout_width="match_parent"
        android:background="#AA3996E7"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:text="@string/fragment_about_text"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <TextView
        android:id="@+id/textViewAboutLink"
        android:layout_width="match_parent"
        android:autoLink="web"
        android:background="#AA3996E7"
        android:linksClickable="true"
        android:text="@string/fragment_about_link"
        android:textColor="#000000"
        android:textColorLink="#FFFE68"
        android:textSize="14sp"
        android:textStyle="bold" />
	</TableRow>

</TableLayout>